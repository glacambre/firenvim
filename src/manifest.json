{
  "manifest_version": 2,
  "name": "Firenvim",
  "version": "0.1.3",

  "description": "Turn Firefox into a Neovim client.",

  "content_scripts": [
    {
      "all_frames": true,
      "js": ["content.js"],
      "matches": [
        "<all_urls>"
      ],
      "match_about_blank": true,
      "run_at": "document_start"
    }
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "applications": {
    "gecko": {
      "id": "firenvim@lacamb.re",
      "strict_min_version": "65.0"
    }
  },

  "permissions": ["nativeMessaging"],

  "icons": {
    "48": "firenvim.svg"
  }
}
