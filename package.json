{
  "author": "glacambre",
  "dependencies": {
    "@types/jest": "26.0.20",
    "@types/msgpack-lite": "0.1.7",
    "@types/node": "14.14.20",
    "@types/selenium-webdriver": "4.0.11",
    "ace-builds": "^1.4.12",
    "codemirror": "^5.59.1",
    "copy-webpack-plugin": "7.0.0",
    "geckodriver": "1.21.1",
    "imports-loader": "^1.2.0",
    "jest": "25.5.4",
    "monaco-editor": "^0.21.2",
    "msgpack-lite": "0.1.26",
    "selenium-webdriver": "4.0.0-alpha.8",
    "sharp": "0.27.0",
    "ts-jest": "25.5.1",
    "ts-loader": "^8.0.14",
    "tslint": "6.1.3",
    "typescript": "3.9.7",
    "web-ext": "5.4.1",
    "web-ext-types": "3.2.1",
    "webextension-polyfill": "0.7.0",
    "webpack": "5.11.1",
    "webpack-cli": "4.3.1"
  },
  "description": "Turn your browser into a Neovim GUI.",
  "keywords": [
    "chrome",
    "chromium",
    "firefox",
    "nvim",
    "vim",
    "webext",
    "webextension"
  ],
  "license": "GPL-3.0",
  "name": "Firenvim",
  "scripts": {
    "build": "tslint --fix --project . && webpack && web-ext build --source-dir target/firefox --artifacts-dir target/xpi --overwrite-dest -n firefox-latest.xpi && web-ext build --source-dir target/thunderbird --artifacts-dir target/xpi --overwrite-dest -n thunderbird-latest.xpi",
    "clean": "rm -rf target",
    "install_manifests": "nvim --headless -u NORC -i NONE -n -c \":set rtp+=.\" -c \"call firenvim#install(1)\" -c \"quit\"",
    "jest": "jest",
    "pack": "web-ext build --source-dir target/firefox --artifacts-dir target/xpi --overwrite-dest",
    "test": "webpack --env=testing && web-ext build --source-dir target/firefox --artifacts-dir target/xpi --overwrite-dest && jest",
    "webpack": "webpack"
  },
  "jest": {
    "bail": 1,
    "testRegex": "/tests/[^_].*\\.(jsx?|tsx?)$",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleFileExtensions": [
      "json",
      "js",
      "ts"
    ]
  },
  "version": "0.1.32"
}
